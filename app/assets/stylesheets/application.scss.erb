@import "bootstrap";

$growth-light-white: #f5f5f6;
$growth-dark-white: #cdced1;
$growth-black: #050c17;
$growth-red: #b1046b;
$growth-violet: #640c41;
$growth-yellow: #bdb319;
$growth-blue: #0071bc;
$growth-dark-blue: #0c2e64;

body {
  background-color: growth-light-white;
}

// header

.navbar-extend {
  margin-bottom: 0;
  background-color: $growth-black;
  opacity: 0.9;
  ul li a button {
    padding: 0.375rem 1.5rem;
  }
}

.logo-img:hover {
  opacity: 0.6;
  padding-top: 2px;
  :hover {
    opacity: 0.6;
  }
}

// jumbotron

.jumbotron-extend {
  background-image: url(<%= asset_path "green-2551467_1920.jpg" %>);
  background-size: cover;
  background-position: center 70%;
  background-repeat: no-repeat;
  .container {
    margin-top: 6rem;
    h1,
    p {
      margin-bottom: 0.75rem;
      color: $growth-light-white;
    }

    h1 {
      margin-bottom: 1.5rem;
    }
    p:last-of-type {
      margin-bottom: 2rem;
    }
  }
}

// discription

.discription-container h2, .discription-container p {
  color: $growth-dark-blue;
}

.discription-container {
  margin: 3rem 0;
  padding: 3rem 1rem;
  h2 {
  font-size: 1.6rem;
  text-align: center;
  margin-bottom: 1.8rem;
  }
  p {
    font-size: 1rem;
    line-height: 2.1rem;
  }
}

.discription-img-container {
  margin-bottom: 3rem;
  text-align: center;
}

.discription-img {
  width: 12rem;
  border-radius: 0.1rem;
}